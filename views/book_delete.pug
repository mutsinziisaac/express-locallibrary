extends layout

block content

  h1 #{title}: #{book.title}

  if bookInstances.length

    p #[strong Delete the following book copies before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Book Instances
      dl
        each bookinstance in bookInstances
          dt
            a(href=bookinstance.url) #{book.id}

  else
    p Do you really want to delete this book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete
